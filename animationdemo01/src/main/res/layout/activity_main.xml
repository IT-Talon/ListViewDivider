<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.talon.animationdemo01.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="button按钮"
        android:onClick="onClick"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/circleAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="圆形动画" />

    <Button
        android:id="@+id/explodeAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="explode动画"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/fadeAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="fade动画"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/slideAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="slide动画"
        android:textAllCaps="false" />
</LinearLayout>
